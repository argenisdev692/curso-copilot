{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER;Database=BookingSystemDb;User Id=YOUR_USER;Password=YOUR_PASSWORD;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "AllowedHosts": "*",
  "Application": {
    "Name": "BookingSystemAPI",
    "Version": "1.0.0"
  },
  "Jwt": {
    "Key": "REPLACE_WITH_SECURE_KEY_MIN_32_CHARS_USE_USER_SECRETS_OR_ENV_VAR",
    "Issuer": "BookingSystemAPI",
    "Audience": "BookingSystemAPI",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Cors": {
    "AllowedOrigins": [
      "https://yourdomain.com",
      "https://app.yourdomain.com"
    ]
  },
  "RateLimiting": {
    "Auth": {
      "PermitLimit": 5,
      "WindowSeconds": 60,
      "QueueLimit": 2
    },
    "General": {
      "PermitLimit": 100,
      "WindowSeconds": 60
    }
  },
  "QueryOptions": {
    "TimeoutSeconds": 30,
    "EnableDetailedLogging": false,
    "SlowQueryThresholdMs": 5000,
    "DefaultPageSize": 20,
    "MaxPageSize": 100,
    "UseSplitQuery": true,
    "MaxRetryCount": 3,
    "RetryIntervalMs": 1000
  },
  "Security": {
    "AccountLockout": {
      "MaxFailedAttempts": 5,
      "LockoutDurationMinutes": 15,
      "MaxFailedAttemptsPerIp": 20,
      "IpLockoutDurationMinutes": 30
    }
  },
  "RabbitMQ": {
    "Enabled": false,
    "Host": "localhost",
    "Port": 5672,
    "Username": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "Retry": {
      "Count": 5,
      "IntervalSeconds": 10,
      "IntervalIncrementSeconds": 30
    }
  }
}
