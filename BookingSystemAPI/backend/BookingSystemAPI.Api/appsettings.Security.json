{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER;Database=BookingSystemDb;User Id=YOUR_USER;Password=YOUR_PASSWORD;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "AllowedHosts": "*",
  "Application": {
    "Name": "BookingSystemAPI",
    "Version": "1.0.0"
  },
  "Jwt": {
    "___COMMENT_Key": "Solo para desarrollo. En producción usar Azure Key Vault con RS256",
    "Key": "REPLACE_WITH_SECURE_KEY_MIN_32_CHARS_USE_USER_SECRETS_OR_ENV_VAR",
    "PrivateKey": "",
    "PublicKey": "",
    "KeyVaultUri": "",
    "KeyVaultSecretName": "JwtPrivateKey",
    "Issuer": "BookingSystemAPI",
    "Audience": "BookingSystemAPI",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7,
    "Algorithm": "HS256",
    "ClockSkewSeconds": 0,
    "ValidateIssuerSigningKey": true,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "RequireExpirationTime": true
  },
  "JwtCookie": {
    "AccessTokenCookieName": "access_token",
    "RefreshTokenCookieName": "refresh_token",
    "CsrfTokenCookieName": "XSRF-TOKEN",
    "CsrfHeaderName": "X-XSRF-TOKEN",
    "SecureOnly": true,
    "SameSiteMode": "Strict",
    "AccessTokenPath": "/",
    "RefreshTokenPath": "/api/auth",
    "Domain": null,
    "IsEssential": true
  },
  "Cors": {
    "AllowedOrigins": [
      "https://yourdomain.com",
      "https://app.yourdomain.com"
    ],
    "AllowCredentials": true
  },
  "RateLimiting": {
    "Auth": {
      "PermitLimit": 5,
      "WindowSeconds": 60,
      "QueueLimit": 2
    },
    "General": {
      "PermitLimit": 100,
      "WindowSeconds": 60
    }
  },
  "QueryOptions": {
    "TimeoutSeconds": 30,
    "EnableDetailedLogging": false,
    "SlowQueryThresholdMs": 5000,
    "DefaultPageSize": 20,
    "MaxPageSize": 100,
    "UseSplitQuery": true,
    "MaxRetryCount": 3,
    "RetryIntervalMs": 1000
  },
  "Security": {
    "AccountLockout": {
      "MaxFailedAttempts": 5,
      "LockoutDurationMinutes": 15,
      "MaxFailedAttemptsPerIp": 20,
      "IpLockoutDurationMinutes": 30,
      "AttemptWindowMinutes": 15
    },
    "Headers": {
      "EnableHsts": true,
      "HstsMaxAgeSeconds": 31536000,
      "EnableXContentTypeOptions": true,
      "EnableXFrameOptions": true,
      "EnableXXssProtection": true,
      "EnableReferrerPolicy": true,
      "EnablePermissionsPolicy": true,
      "ContentSecurityPolicy": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self'; connect-src 'self'"
    },
    "AntiCsrf": {
      "Enabled": true,
      "HeaderName": "X-XSRF-TOKEN",
      "CookieName": "XSRF-TOKEN"
    },
    "PasswordPolicy": {
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireNonAlphanumeric": true,
      "MinimumLength": 8,
      "MaximumLength": 128,
      "BCryptWorkFactor": 12
    }
  },
  "RabbitMQ": {
    "Enabled": false,
    "Host": "localhost",
    "Port": 5672,
    "Username": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "Retry": {
      "Count": 5,
      "IntervalSeconds": 10,
      "IntervalIncrementSeconds": 30
    }
  },
  "AzureAdB2C": {
    "___COMMENT": "Configuración opcional para Azure AD B2C",
    "Enabled": false,
    "Instance": "https://yourtenant.b2clogin.com/",
    "Domain": "yourtenant.onmicrosoft.com",
    "ClientId": "your-client-id",
    "SignUpSignInPolicyId": "B2C_1_SignUpSignIn",
    "ResetPasswordPolicyId": "B2C_1_PasswordReset",
    "EditProfilePolicyId": "B2C_1_EditProfile"
  }
}
